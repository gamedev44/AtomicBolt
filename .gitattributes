# Enable Git LFS for large files
*.png            filter=lfs diff=lfs merge=lfs -text
*.jpg            filter=lfs diff=lfs merge=lfs -text
*.jpeg           filter=lfs diff=lfs merge=lfs -text
*.gif            filter=lfs diff=lfs merge=lfs -text
*.ico            filter=lfs diff=lfs merge=lfs -text
*.woff           filter=lfs diff=lfs merge=lfs -text
*.woff2          filter=lfs diff=lfs merge=lfs -text
*.ttf            filter=lfs diff=lfs merge=lfs -text
*.otf            filter=lfs diff=lfs merge=lfs -text
*.exe            filter=lfs diff=lfs merge=lfs -text

# Text files: normalize line endings to LF
*.js             text eol=lf
*.jsx            text eol=lf
*.ts             text eol=lf
*.tsx            text eol=lf
*.json           text eol=lf
*.mjs            text eol=lf
*.css            text eol=lf
*.scss           text eol=lf
*.html           text eol=lf
*.yml            text eol=lf
*.yaml           text eol=lf
*.conf           text eol=lf
*.env            text eol=lf
*.md             text eol=lf
*.txt            text eol=lf
*.py             text eol=lf
*.pyi            text eol=lf
# Batch files: CRLF for Windows compatibility
*.bat            text eol=crlf
# Logs and cache files: treat as text
*.log            text eol=lf
.cache           -text
# Docker and Shell files: normalize to LF
Dockerfile       text eol=lf
*.dockerignore   text eol=lf
*.sh             text eol=lf
# Ignore IDE and OS-specific files: don't normalize
.vscode/         -text
.idea/           -text
.DS_Store        -text
Thumbs.db        -text
ehthumbs.db      -text
*.swp            -text
# Files excluded by .gitignore shouldn't conflict
!*.bat
!*.exe
!*.env.example
/LICENSE filter=lfs diff=lfs merge=lfs -text
*.gitignore filter=lfs diff=lfs merge=lfs -text
